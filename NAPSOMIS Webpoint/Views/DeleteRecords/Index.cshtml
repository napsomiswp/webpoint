@model NAPSOMIS_Webpoint.Models.mem_tr

@{
    ViewBag.Title = "Delete Record";
}


<div class="col-md-1" style="background-color:white; font-size:small;">
    <br />
    <img src="~/Content/Images/edit_delete_3.png" style="width:70px; height:60px; padding-left:10px;" />

</div>

<div class="col-md-11" style="background-color:white; font-size:small;">
    <br />
    <text style="color:midnightblue; padding-left:10px; font-size:large;"> Delete Member Record </text>
    <br />
    <text style="font-size:small; padding-left:10px;">Please search for a member record by providing the </text>
    <br />
    <text style="font-size:small; padding-left:10px;">
        Reference below

        <br />

</div>

@using (Html.BeginForm("Search", "DeleteREcords", FormMethod.Post))
    {
    @Html.DevExpress().FormLayout(settings =>
{

    settings.Name = "deletelayout";
    settings.ColCount = 3;

    if (ViewBag.Message != null)
        {
        settings.Items.Add(b =>
        {
            b.ShowCaption = DefaultBoolean.False;
            b.Name = "MessageGroup";

            b.NestedExtension().Label(lb =>
            {
                lb.Name = "lblmessage";
                lb.Text = ViewBag.Message;
                lb.ControlStyle.ForeColor = System.Drawing.Color.Red;
            });

        });

        //settings.Items.AddEmptyItem();
        //settings.Items.AddEmptyItem();

        }

    settings.Items.AddGroupItem(g =>
    {

        g.Name = "loadgroup";
        g.Caption = "Search";
        g.ColSpan = 3;

        g.Items.Add(b => b.fref_no).NestedExtension().TextBox(t =>
        {
            t.Name = "fref_no";

        });

        g.Items.Add(bt =>
        {
            bt.Caption = "";

            bt.NestedExtension().Button(b =>
            {
                b.Name = "cmdsearch";
                b.Text = "Search";
                b.Width = Unit.Pixel(100);
                b.UseSubmitBehavior = true;

            });

        });

    });


    settings.Items.AddGroupItem(g =>
    {
        g.Name = "displaygroup";
        g.Caption = "Details";
        g.ColSpan = 3;

        g.Items.Add(b => b.fsurname).NestedExtension().TextBox(d => { d.Name = "fsurname"; d.ReadOnly = true; d.Properties.ReadOnlyStyle.BackColor = System.Drawing.Color.LightGray; });
        g.Items.Add(b => b.firstname).NestedExtension().TextBox(d => { d.Name = "firstname"; d.ReadOnly = true; d.Properties.ReadOnlyStyle.BackColor = System.Drawing.Color.LightGray; });
        g.Items.Add(b => b.fothname).NestedExtension().TextBox(d => { d.Name = "fothname"; d.ReadOnly = true; d.Properties.ReadOnlyStyle.BackColor = System.Drawing.Color.LightGray; });
        g.Items.Add(b => b.fb_date).NestedExtension().DateEdit(d => { d.Name = "fb_date"; d.ReadOnly = true; d.Properties.ReadOnlyStyle.BackColor = System.Drawing.Color.LightGray; });
    });

    settings.Items.AddEmptyItem();

    settings.Items.Add(bt =>
    {
        bt.Caption = "";

        bt.NestedExtension().Button(b =>
        {
            b.Name = "cmddelete";
            b.Text = "Delete";
            b.Width = Unit.Pixel(100);
            b.UseSubmitBehavior = true;
            b.RouteValues = new { Controller = "DeleteRecords", Action = "Delete" };
            b.Enabled = false;

            if (Model.firstname != null)
                {
                b.Enabled = true;
                }
            else
                {
                b.Enabled = false;
                }

        });

    });

    settings.Items.Add(bt =>
    {
        bt.Caption = "";

        bt.NestedExtension().Button(b =>
        {
            b.Name = "cmdcancel";
            b.Text = "Cancel";
            b.Width = Unit.Pixel(100);
            b.UseSubmitBehavior = false;
            b.RouteValues = new { Controller = "DeleteRecords", Action = "Index" };

        });

    });

}).GetHtml()

        }


