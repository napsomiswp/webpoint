<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        @ViewBag.Title
    </title>



    @{
        string TheTag = ViewBag.Tag;

        if (TheTag == "PRINT")
            {
            Html.DevExpress().GetStyleSheets(ASPxWebClientUIControl.ColorSchemeLight,
        new StyleSheet { ExtensionSuite = ExtensionSuite.Report, Theme = "PlasticBlue" },
        new StyleSheet { ExtensionSuite = ExtensionSuite.NavigationAndLayout, Theme = "PlasticBlue" }
        );

            Html.DevExpress().GetScripts(
        new Script { ExtensionSuite = ExtensionSuite.Report },
        new Script { ExtensionSuite = ExtensionSuite.NavigationAndLayout }
        );
            }
        else
            {
            @Html.DevExpress().GetStyleSheets(ASPxWebClientUIControl.ColorSchemeLight,
         new StyleSheet { ExtensionSuite = ExtensionSuite.NavigationAndLayout, Theme = "PlasticBlue" }
     )

            @Html.DevExpress().GetScripts(
         new Script { ExtensionSuite = ExtensionSuite.NavigationAndLayout }
     )
            }
    }


    <link href="@Url.Content("~/Content/bootstrap-lumen.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet">

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/site.js")" type="text/javascript"></script>

</head>

<body>


    <div class="wrapper">
        <header>
            <div class="container">
                @Html.DevExpress().Panel(p =>
           {
               p.Name = "TopPanel";
               p.Width = Unit.Percentage(100);
               p.Collapsible = true;
               p.SettingsAdaptivity.CollapseAtWindowInnerWidth = 725;
               p.SettingsCollapsing.ExpandButton.GlyphType = PanelExpandButtonGlyphType.Strips;
               p.Styles.ExpandBar.CssClass = "expandBar";
               p.Styles.ExpandedPanel.CssClass = "expandedPanel";

               p.SetExpandBarTemplateContent(c =>
               {
                   ViewContext.Writer.Write("<div class='title'><a href='" + Url.Action("Home", "Pages") + "'>NAPSOMIS</a><p class='small'>NASSIT on the go</p></div>");
               });
               p.SetContent(() => { Html.RenderPartial("_HeaderPanelContentPartialFull"); });
           }).GetHtml()
            </div>
        </header>

        <div class="content" style="background-color:whitesmoke;">

            <script type="text/javascript">
                function ShowTime() {
                 
                    var dt = new Date();
                    
                    var labelref = document.getElementById("lbltime"); 
                    labelref.innerText = dt.toLocaleTimeString();
  
                    window.setTimeout("ShowTime()", 1000);
                }
            </script>


