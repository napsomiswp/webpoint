@model NAPSOMIS_Webpoint.ViewModels.ListofEstWithValidNumViewModel

@using NAPSOMIS_Webpoint.ViewModels

@{
    ViewBag.Title = "List of Est. with valid Numbers";
}
<br />

<div class="col-md-1" style="background-color:white; font-size:small;">
    <br />
    <img src="~/Content/Images/document-open-5.png" width:60px; height:50px; padding-left:10px;" />
    <br />
</div>

<div class="col-md-10" style="background-color:white; font-size:small;">

    <text style="color:midnightblue; padding-left:10px; font-size:large;"> List of Establishments with Valid Transactions </text>
    <br />
    <text style="font-size:small; padding-left:10px;">Produce list of valid numbers of an establishment by using the form below</text>
    <br />
</div>


@using (Html.BeginForm("ListInvalidNumbers_OK", "Contribution", FormMethod.Post))
    {

    @Html.AntiForgeryToken()
    @Html.DevExpress().FormLayout(setting =>
{
    setting.Name = "receivecrlayout";
    setting.ColCount = 1;

    setting.Items.AddGroupItem(group =>
    {
        group.Name = "firstgroup";
        group.Caption = "Basic Search";
        group.GroupBoxDecoration = GroupBoxDecoration.Box;
        group.ColSpan = 1;
        group.ColCount = 1;

        group.Items.Add(m => m.areaoffice).NestedExtension().ComboBox(b =>
        {
            b.Name = "areaoffice";

            if (TempData.Peek("MyAreaOffices") != null)
                {
                List<PDCTemplate> myoffices = (List<PDCTemplate>)TempData.Peek("MyAreaOffices");

                b.Properties.Columns.Add("Code", "Code", Unit.Pixel(50));
                b.Properties.Columns.Add("Name", "Name", Unit.Pixel(200));

                b.Properties.DataSource = myoffices;
                b.Properties.TextField = "Name";
                b.Properties.ValueField = "Code";
                }


        });

        group.Items.Add(i =>
        {
            i.Caption = " ";
            i.NestedExtension().Button(b =>
            {
                b.Name = "cmdprocess";
                b.Text = "Process";
                b.UseSubmitBehavior = true;
                b.Width = Unit.Pixel(120);
                b.RouteValues = new { Controller = "Contribution", Action = "ListofEstWithValidNos_Print", ParamValue = "" };
            });

        });

    });

}).GetHtml()
    }

